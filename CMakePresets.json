{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "clang",
      "hidden": true,
      "cacheVariables" : {
        "CMAKE_C_COMPILER": "$env{CC}",
        "CMAKE_CXX_COMPILER": "$env{CXX}"
      },
      "environment" : {
        "CC": "$env{HOME}/externals/local/llvm-project-21.1.0/bin/clang",
        "CXX": "$env{HOME}/externals/local/llvm-project-21.1.0/bin/clang++"
      }
    },
    {
      "name": "gcc",
      "hidden": true,
      "cacheVariables" : {
        "CMAKE_C_COMPILER": "$env{CC}",
        "CMAKE_CXX_COMPILER": "$env{CXX}"
      },
      "environment" : {
        "CC": "$env{HOME}/externals/local/gcc-15.2.0/bin/gcc15",
        "CXX": "$env{HOME}/externals/local/gcc-15.2.0/bin/g++15"
      }
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "cacheVariables" : {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_MANIFEST_MODE": "ON",
        "VCPKG_INSTALLED_DIR": "${sourceDir}/vcpkg_installed"
      }
    },
    {
      "name": "debug",
      "inherits": ["base", "vcpkg", "clang"],
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables" : {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "inherits": ["base", "vcpkg", "clang"],
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables" : {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    { "name" : "debug", "configurePreset": "debug" },
    { "name" : "release", "configurePreset": "release" }
  ]
}
